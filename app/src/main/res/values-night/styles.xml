<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- several_screens.xml -->

    <style name="TopStringStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_font_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- activity_main.xml -->

    <style name="ButtonStyleMainScreen" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_font_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/radius_16</item>
    </style>

    <!-- activity_setting.xml -->

    <style name="BackStyleSettingsScreen">
        <item name="tint">@color/white</item>
    </style>

    <style name="TextStyleSettingsScreen">
        <item name="android:textColor">@color/white</item>Ñ‹
        <item name="android:textSize">@dimen/medium_font_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <!-- activity_search.xml -->

    <style name="EditTextStyleSearchScreen">
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/search</item>
        <item name="android:drawableStart">@drawable/ic_search_night_16</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="IcSearchStyleSearchScreen">
        <item name="android:src">@drawable/ic_search_16</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="LinearEditStyleSearchScreen">
        <item name="android:background">@drawable/background_rounded_night</item>
    </style>

    <style name="ClearStyleSearchScreen">
        <item name="tint">@color/black</item>
    </style>

    <style name="TextTrackNameStyleSearchScreen">
        <item name="android:textSize">@dimen/medium_font_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayStyleSearchScreen">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TextArtistNameStyleSearchScreen">
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlaceholderMessageStyleSearchScreen">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="PlaceholderButtonStyleSearchScreen">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">54dp</item>
    </style>

</resources>