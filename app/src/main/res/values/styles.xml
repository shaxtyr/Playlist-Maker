<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- several_screens.xml -->

    <style name="TopStringStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_font_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- activity_setting.xml -->

    <style name="BackStyleSettingsScreen">
        <item name="tint">@color/black</item>
    </style>

    <style name="TextStyleSettingsScreen">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_font_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableTint">@color/gray</item>
    </style>

    <style name="SwitchStyleSettingsScreen">
        <item name="android:textColor">@color/black</item>Ñ‹
        <item name="android:textSize">@dimen/medium_font_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">@color/gray</item>
        <item name="trackTint">@color/light_gray</item>
    </style>

    <!-- activity_search.xml -->

    <style name="EditTextStyleSearchScreen">
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@string/search</item>
        <item name="android:drawableStart">@drawable/ic_search_16</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="IcSearchStyleSearchScreen">
        <item name="android:src">@drawable/ic_search_16</item>
        <item name="tint">@color/gray</item>
    </style>

    <style name="LinearEditStyleSearchScreen">
        <item name="android:background">@drawable/background_rounded</item>
    </style>

    <style name="ClearStyleSearchScreen">
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="TextTrackNameStyleSearchScreen">
        <item name="android:textSize">@dimen/medium_font_16</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlayStyleSearchScreen">
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="TextArtistNameStyleSearchScreen">
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="PlaceholderMessageStyleSearchScreen">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="PlaceholderButtonStyleSearchScreen">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="TextYouSearchedStyleSearchScreen">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TabLayoutStyleMediaScreen">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:textFontWeight">500</item>
    </style>



</resources>