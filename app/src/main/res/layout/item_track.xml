<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="13dp"
        android:layout_marginVertical="8dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/img" />

    <TextView
        android:id="@+id/track_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="28dp"
        style="@style/TextTrackNameStyleSearchScreen"
        tools:text="@string/track_name_track1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        style="@style/PlayStyleSearchScreen"
        android:src="@drawable/ic_arrow_forward_24"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="66dp"
        android:layout_marginTop="34dp">

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextArtistNameStyleSearchScreen"
            tools:text="@string/artist_name_track1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_point_13"/>

        <TextView
            android:id="@+id/time_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            style="@style/TextArtistNameStyleSearchScreen"
            tools:text="@string/track_time_track1"/>

    </LinearLayout>
</FrameLayout>